@using System.Globalization
@model ShoppingCartApp.Models.Item

@{
    ViewData["Title"] = "Item Details";
    var total = (Model?.Price * Model?.Quantity) ?? 0;
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index"><i class="bi bi-house"></i> Cart</a></li>
            <li class="breadcrumb-item active" aria-current="page">Item Details</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-5 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-image"></i> Product Image</h5>
                </div>
                <div class="card-body text-center d-flex align-items-center justify-content-center" style="min-height: 400px;">
                    @if (!string.IsNullOrEmpty(Model?.Product?.ProductImage))
                    {
                        <img src="@Model.Product.ProductImage"
                             alt="@Model.Product.ProductName"
                             class="img-fluid rounded shadow"
                             style="max-height: 350px; object-fit: contain;" />
                    }
                    else
                    {
                        <div class="text-center p-5">
                            <i class="bi bi-image text-muted" style="font-size: 5rem;"></i>
                            <p class="text-muted mt-3">No image available</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-7">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-info-circle"></i> Item Details
                    </h4>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 mb-3">
                            <i class="bi bi-hash"></i> Item ID
                        </dt>
                        <dd class="col-sm-8 mb-3">
                            <span class="badge bg-secondary">@Model?.Id</span>
                        </dd>

                        <dt class="col-sm-4 mb-3">
                            <i class="bi bi-box-seam"></i> Product
                        </dt>
                        <dd class="col-sm-8 mb-3">
                            <strong class="text-primary">@Model?.Product?.ProductName</strong>
                        </dd>

                        <dt class="col-sm-4 mb-3">
                            <i class="bi bi-tag"></i> Item Name
                        </dt>
                        <dd class="col-sm-8 mb-3">
                            @Model?.Name
                        </dd>

                        <dt class="col-sm-4 mb-3">
                            <i class="bi bi-123"></i> Quantity
                        </dt>
                        <dd class="col-sm-8 mb-3">
                            <span class="badge bg-info fs-6">@Model?.Quantity</span>
                        </dd>

                        <dt class="col-sm-4 mb-3">
                            <i class="bi bi-currency-pound"></i> Unit Price
                        </dt>
                        <dd class="col-sm-8 mb-3">
                            <span class="fs-5">@Model?.Price.ToString("C", new CultureInfo("en-GB"))</span>
                        </dd>

                        <dt class="col-sm-4 mb-3">
                            <i class="bi bi-calculator"></i> Total Price
                        </dt>
                        <dd class="col-sm-8 mb-3">
                            <span class="fs-4 text-success fw-bold">
                                @total.ToString("C", new CultureInfo("en-GB"))
                            </span>
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-gear"></i> Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning btn-lg">
                            <i class="bi bi-pencil-square"></i> Edit This Item
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-danger btn-lg">
                            <i class="bi bi-trash"></i> Delete This Item
                        </a>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="bi bi-arrow-left"></i> Back to Cart
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-clock-history"></i> Additional Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-calendar-plus text-success me-2" style="font-size: 1.5rem;"></i>
                                <div>
                                    <small class="text-muted d-block">Date Added</small>
                                    <strong>N/A</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-pencil text-warning me-2" style="font-size: 1.5rem;"></i>
                                <div>
                                    <small class="text-muted d-block">Last Modified</small>
                                    <strong>N/A</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-truck text-primary me-2" style="font-size: 1.5rem;"></i>
                                <div>
                                    <small class="text-muted d-block">Status</small>
                                    <span class="badge bg-success">In Cart</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add fade-in animation
            const cards = document.querySelectorAll('.card');
            cards.forEach((card, index) => {
                card.style.animation = `fadeIn 0.5s ease-in-out ${index * 0.1}s both`;
            });

            // Add print functionality
            const printButton = document.createElement('button');
            printButton.className = 'btn btn-outline-secondary position-fixed bottom-0 end-0 m-3';
            printButton.innerHTML = '<i class="bi bi-printer"></i> Print';
            printButton.onclick = () => window.print();
            document.body.appendChild(printButton);
        });
    </script>

    <style>
        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@media print {
            .btn, nav, .card-header {
                display: none !important;
            }
        }
    </style>
}