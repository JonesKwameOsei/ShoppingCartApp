@model ShoppingCartApp.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h1>Delete Product</h1>

<form asp-action="Delete" method="post">
    <div form-group>
        <label asp-for="ProductName" class="control-label"></label>
        <input asp-for="ProductName" class="form-control" readonly />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>
    <div form-group>
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" readonly />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div form-group>
        <label asp-for="ProductImage" class="control-label"></label>
        <img src="@Model.ProductImage" alt="Product Image" style="max-width: 300px;" />
    </div>
    <div form-group>
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}