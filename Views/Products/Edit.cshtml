@model ShoppingCartApp.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil-square"></i> Edit Product
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data" id="editForm">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" name="ProductImage" value="@ViewBag.viewImage" />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="ProductName" class="form-label">
                                        <i class="bi bi-tag"></i> Product Name
                                    </label>
                                    <input asp-for="ProductName" class="form-control" />
                                    <span asp-validation-for="ProductName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Price" class="form-label">
                                        <i class="bi bi-currency-pound"></i> Price
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text">£</span>
                                        <input asp-for="Price"
                                               type="number"
                                               class="form-control"
                                               step="0.01"
                                               min="0.01" />
                                    </div>
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">
                                <i class="bi bi-image"></i> Update Product Image
                            </label>
                            <input type="file"
                                   name="imageFile"
                                   id="imageFile"
                                   class="form-control"
                                   accept="image/*" />
                            <small class="form-text text-muted">
                                <i class="bi bi-info-circle"></i> Leave empty to keep the current image
                            </small>
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Save Changes
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <a asp-action="Details" asp-route-id="@Model?.Id" class="btn btn-info text-white">
                                <i class="bi bi-eye"></i> View Details
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm" id="productPreview">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-image"></i> Current Image
                    </h5>
                </div>
                <div class="card-body text-center">
                    <img id="currentImage"
                         src="@ViewBag.viewImage"
                         alt="@Model?.ProductName"
                         class="img-fluid rounded mb-3"
                         style="max-height: 250px; object-fit: contain;" />
                    <h6 id="productName" class="text-muted">@Model?.ProductName</h6>
                </div>
            </div>

            <div class="card shadow-sm mt-3" id="newImagePreviewCard" style="display: none;">
                <div class="card-header bg-warning text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-image"></i> New Image Preview
                    </h5>
                </div>
                <div class="card-body text-center">
                    <img id="imagePreview"
                         src=""
                         alt="New Image Preview"
                         class="img-fluid rounded"
                         style="max-height: 250px; object-fit: contain;" />
                </div>
            </div>

            <div class="card shadow-sm mt-3">
                <div class="card-body">
                    <h6 class="card-title"><i class="bi bi-info-circle"></i> Product Info</h6>
                    <ul class="list-unstyled">
                        <li><strong>Product ID:</strong> @Model?.Id</li>
                        <li><strong>Created:</strong> <span class="text-muted">N/A</span></li>
                        <li><strong>Last Modified:</strong> <span class="text-muted">Just now</span></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const imageFileInput = document.getElementById('imageFile');
            const imagePreview = document.getElementById('imagePreview');
            const newImagePreviewCard = document.getElementById('newImagePreviewCard');

            // Handle image file change
            imageFileInput.addEventListener('change', function(event) {
                const file = event.target.files[0];
                if (file) {
                    // Validate file size (5MB max)
                    if (file.size > 5 * 1024 * 1024) {
                        showToast('Image size should not exceed 5MB', 'error');
                        imageFileInput.value = '';
                        newImagePreviewCard.style.display = 'none';
                        return;
                    }

                    // Validate file type
                    if (!file.type.startsWith('image/')) {
                        showToast('Please select a valid image file', 'error');
                        imageFileInput.value = '';
                        newImagePreviewCard.style.display = 'none';
                        return;
                    }

                    const reader = new FileReader();
                    reader.onload = function(e) {
                        imagePreview.src = e.target.result;
                        newImagePreviewCard.style.display = 'block';
                        showToast('New image loaded successfully', 'success');
                    };
                    reader.readAsDataURL(file);
                } else {
                    newImagePreviewCard.style.display = 'none';
                }
            });

            function showToast(message, type) {
                const toast = document.createElement('div');
                toast.className = `alert alert-${type === 'success' ? 'success' : 'danger'} position-fixed top-0 end-0 m-3`;
                toast.style.zIndex = '9999';
                toast.innerHTML = `
                    <i class="bi bi-${type === 'success' ? 'check-circle' : 'exclamation-circle'}"></i> ${message}
                `;
                document.body.appendChild(toast);

                setTimeout(() => {
                    toast.remove();
                }, 3000);
            }
        });
    </script>
}